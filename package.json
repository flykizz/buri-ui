{
  "name": "buri",
  "version": "1.0.0",
  "description": "Mobile UI Components built on Vue",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "lib/index.css",
  "typings": "types/index.d.ts",
  "files": [
    "es",
    "lib",
    "types",
    "vetur"
  ],
  "scripts": {
    "bootstrap": "yarn || npm i",
    "dev": "buri-cli dev",
    "lint": "buri-cli lint",
    "test": "buri-cli test",
    "build": "buri-cli build",
    "release": "buri-cli release",
    "test:watch": "buri-cli test --watch",
    "release:site": "sh docs/site/release.sh",
    "test:coverage": "open test/coverage/index.html"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "buri-cli commit-lint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{vue,css,less}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:flykizz/buri-ui.git"
  },
  "keywords": [
    "vue",
    "component"
  ],
  "author": "flykizz",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "7.x",
    "@vue/babel-helper-vue-jsx-merge-props": "^1.0.0",
    "vue-lazyload": "1.2.3"
  },
  "peerDependencies": {
    "vue": ">= 2.5.22"
  },
  "devDependencies": {
    "@buri-ui/cli": "^1.0.0",
    "lint-staged": "^9.5.0",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "sideEffects": [
    "es/**/style/*",
    "lib/**/style/*",
    "*.css",
    "*.less"
  ],
  "vetur": {
    "tags": "vetur/tags.json",
    "attributes": "vetur/attributes.json"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@buri-ui"
    ]
  },
  "stylelint": {
    "extends": [
      "@buri-ui/stylelint-config"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ]
}
